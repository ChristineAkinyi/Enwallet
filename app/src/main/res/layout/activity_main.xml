<!--<?xml version="1.0" encoding="utf-8"?>-->


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imgViewOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/income" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="42dp"
            android:text="MONEY IN"
            app:layout_constraintStart_toEndOf="@+id/imgViewOne"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/teachers"
            android:textFontWeight="700"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="KES 42400"
            app:layout_constraintStart_toEndOf="@+id/imgViewOne"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:fontFamily="@font/teachers"
            android:textFontWeight="700"/>

        <ImageView
            android:id="@+id/imgViewTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/expense" />

        <TextView
            android:id="@+id/txtMoneyOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="MONEY OUT"
            app:layout_constraintStart_toEndOf="@+id/imgViewTwo"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/teachers"
            android:textFontWeight="700"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="KES 23400"
            app:layout_constraintStart_toEndOf="@+id/imgViewTwo"
            app:layout_constraintTop_toBottomOf="@+id/txtMoneyOut"
            android:fontFamily="@font/teachers"
            android:textFontWeight="700"/>

        <ImageView
            android:id="@+id/imgViewThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgViewOne"
            app:srcCompat="@drawable/balance" />

        <TextView
            android:id="@+id/txtBalanceThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="BALANCE"
            app:layout_constraintStart_toEndOf="@+id/imgViewThree"
            app:layout_constraintTop_toBottomOf="@+id/textView2" 
            android:fontFamily="@font/teachers"
            android:textFontWeight="700"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="KEs 18700"
            app:layout_constraintStart_toEndOf="@+id/imgViewThree"
            app:layout_constraintTop_toBottomOf="@+id/txtBalanceThree" 
            android:fontFamily="@font/teachers"
            android:textFontWeight="700"/>

        <ImageView
            android:id="@+id/imgTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/imgViewTwo"
            app:srcCompat="@drawable/transactions" />

        <TextView
            android:id="@+id/txtTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:text="TRANSACTIONS"
            app:layout_constraintStart_toEndOf="@+id/imgTransactions"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:fontFamily="@font/teachers"
            android:textFontWeight="700"/>

        <TextView
            android:id="@+id/txtTransact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="8"
            app:layout_constraintStart_toEndOf="@+id/imgTransactions"
            app:layout_constraintTop_toBottomOf="@+id/txtTransactions"
            android:fontFamily="@font/teachers"
            android:textFontWeight="700"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvViews"
            android:layout_width="369dp"
            android:layout_height="520dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTransactions" />
     

<!--</com.google.android.material.card.MaterialCardView>-->
</androidx.constraintlayout.widget.ConstraintLayout>