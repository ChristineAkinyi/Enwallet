<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtMoneyIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:text="MONEY IN"
            app:layout_constraintStart_toEndOf="@+id/imgViewOne"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="KES 42400"
            app:layout_constraintStart_toEndOf="@+id/imgViewOne"
            app:layout_constraintTop_toBottomOf="@+id/txtMoneyIn" />

        <ImageView
            android:id="@+id/imgViewOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/income" />

        <ImageView
            android:id="@+id/imgViewTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toEndOf="@+id/txtBalance"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/expense" />

        <TextView
            android:id="@+id/txtMoneyOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:text="MONEY OUT"
            app:layout_constraintStart_toEndOf="@+id/imgViewTwo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtSalaryTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="KES 23700"
            app:layout_constraintStart_toEndOf="@+id/imgViewTwo"
            app:layout_constraintTop_toBottomOf="@+id/txtMoneyOut" />

        <ImageView
            android:id="@+id/imgViewThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgViewOne"
            app:srcCompat="@drawable/balance" />

        <TextView
            android:id="@+id/txtBalanceThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:text="BALANCE"
            app:layout_constraintStart_toEndOf="@+id/imgViewThree"
            app:layout_constraintTop_toBottomOf="@+id/txtBalance" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="KES 18700"
            app:layout_constraintStart_toEndOf="@+id/imgViewThree"
            app:layout_constraintTop_toBottomOf="@+id/txtBalanceThree" />

        <ImageView
            android:id="@+id/imgTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/imgViewTwo"
            app:srcCompat="@drawable/transactions" />

        <TextView
            android:id="@+id/txtTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:text="Transactions"
            app:layout_constraintStart_toEndOf="@+id/imgTransactions"
            app:layout_constraintTop_toBottomOf="@+id/txtSalaryTwo" />

        <TextView
            android:id="@+id/txtTransact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="8"
            app:layout_constraintStart_toEndOf="@+id/imgTransactions"
            app:layout_constraintTop_toBottomOf="@+id/txtTransactions" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>